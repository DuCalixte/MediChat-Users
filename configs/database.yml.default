database:
  name: <database_name>
  host: <database_host> # e.g. localhost
  port: 5432
  user: <database_user>
  password: <database_password>
  encoding: <database_encoding> # e.g. ascii, utf8
  adapter: postgresql
  pool: <database_pool> # e.g. 5
  timeout: <database_timeout
  sslmode: <database_sslmode> # e.g. disable or enable
